<secure-deployment name="app-profile-saml.war">
    <SP entityID="sso-saml-demo"
        sslPolicy="EXTERNAL"
        logoutPage="/index.jsp">
        <Keys>
            <Key signing="true">
                <KeyStore file= "/etc/sso-secret-volume/saml.jks" password="password">
                    <PrivateKey alias="sso-saml-demo" password="password"/>
                    <Certificate alias="sso-saml-demo"/>
                </KeyStore>
            </Key>
        </Keys>
        <IDP entityID="idp"
             signatureAlgorithm="RSA_SHA256"
             signatureCanonicalizationMethod="http://www.w3.org/2001/10/xml-exc-c14n#">
            <SingleSignOnService signRequest="true"
                                 validateResponseSignature="true"
                                 validateAssertionSignature="false"
                                 requestBinding="POST"
                                 bindingUrl="https://secure-sso-sso-app-demo.apps.example.com/auth/realms/OpenShift/protocol/saml"/>
            <SingleLogoutService signRequest="true"
                                 signResponse="true"
                                 validateRequestSignature="true"
                                 validateResponseSignature="true"
                                 requestBinding="POST"
                                 responseBinding="POST"
                                 postBindingUrl="https://secure-sso-sso-app-demo.apps.example.com/auth/realms/OpenShift/protocol/saml"
                                 redirectBindingUrl="https://secure-sso-sso-app-demo.apps.example.com/auth/realms/OpenShift/protocol/saml"/>
            <Keys>
                <Key signing="true">
                     <KeyStore file="/etc/sso-secret-volume/saml.jks" password="password">
                         <Certificate alias="OpenShift"/>
                     </KeyStore>
                </Key>
            </Keys>
        </IDP>
    </SP>
</secure-deployment>
